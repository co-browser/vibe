# Server Configuration
PORT=3000
NODE_ENV=production

# Session Configuration
SESSION_SECRET=your-session-secret-here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://your-domain.com/auth/gmail/callback

# CORS Configuration
ALLOWED_ORIGINS=https://localhost,https://your-electron-app-domain.com

# Client Redirect URLs
CLIENT_SUCCESS_URL=https://localhost/oauth/success
CLIENT_ERROR_URL=https://localhost/oauth/error

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100