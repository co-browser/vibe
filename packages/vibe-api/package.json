{
  "name": "@vibe/api",
  "version": "0.1.0",
  "type": "module",
  "description": "Vibe API for agent communication and browser automation",
  "main": "index.ts",
  "scripts": {
    "dev": "tsx watch --inspect=4321 server/server.ts",
    "start": "tsx server/server.ts",
    "build": "esbuild --bundle server/server.ts --platform=node --outdir=dist",
    "test": "vitest",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [],
  "author": "",
  "packageManager": "pnpm@10.12.1",
  "dependencies": {
    "@vibe/agent-core": "workspace:*",
    "@vibe/shared-types": "workspace:*",
    "@trpc/client": "^11.4.3",
    "@trpc/server": "^11.4.3",
    "@tsconfig/node20": "^20.1.5",
    "@types/cors": "^2.8.19",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "esbuild": "^0.24.0",
    "prettier": "^3.5.3",
    "tsx": "^4.7.3",
    "vitest": "^2.0.5",
    "typescript": "^5.5.2"
  }
}
